<h1 class="text-center">Post review for <%= @restaurant.name %></h1>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3"></div>

    <%= simple_form_for [@restaurant, @review] do |f| %>
      <%= f.input :content, placeholder: "tsokay" %>
      <%= f.submit "post", class: "btn btn-danger"%>
    <% end %>
  </div>
</div>
